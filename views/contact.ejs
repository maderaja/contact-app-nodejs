<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mt-2 mb-1">Tambah Data Contact</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success fw-bold" role="alert"><%= msg %></div>
      <% } %>

      <table class="table mt-2 shadow text-center lh-lg">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">ðŸš¨ Data contact masih kosong ðŸš¨</div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { i++%>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td>
              <img src="http://localhost:3000/foto/<%= contact.foto %>" width="50px" class="border border-2 mx-auto shadow-sm img-thumbnail rounded-circle" alt="foto" />
            </td>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a href="/contact/<%= contact.id %> " class="btn btn-success badge rounded-pill py-1 px-2"><i class="bi bi-info-circle"></i> detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
